<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Coupon Table</h4>
          <div class="table-responsive">
            <table class="table table-dark">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Coupon Code</th>
                  <th>Discount</th>
                  <th>Min Price</th>
                  <th>Max Redeemable</th>
                  <th>Valid Till</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (copons.length > 0) { %>
                  <% copons.forEach((copon, index) => { %>
                    <tr>
                      <td><%= (currentPage - 1) * 10 + index + 1 %></td>
                      <td><%= copon.couponCode %></td>
                      <td><%= copon.percentage %>%</td>
                      <td><%= copon.minPrice %></td>
                      <td><%= copon.maxRedeemAmount %></td>
                      <td><%= new Date(copon.expiryDate).toLocaleDateString() %></td>
                      <td>
                        <div class="btn-group">
                          <button
                            type="button"
                            class="btn btn-outline-secondary dropdown-toggle"
                            data-toggle="dropdown"
                          >
                            ...
                          </button>
                          <div class="dropdown-menu">
                            <button
                              type="button"
                              data-coupon-id="<%= copon._id %>"
                              class="btn btn-info btn-fw btn dropdown-item dlt-btn"
                            >
                              Delete
                            </button>
                            <a
                              href="/admin/edit-coupon/<%= copon._id %>"
                              class="btn btn-success btn-fw btn dropdown-item"
                              data-toggle="modal"
                              data-target="#editCouponModal"
                              onclick="openEditModal('<%= JSON.stringify(copon) %>')"
                            >
                              Edit
                            </a>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="7" class="text-center">No Coupons found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination Controls -->
          <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation">
              <ul class="pagination justify-content-center">
                <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= parseInt(currentPage) === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                  </li>
                <% } %>
              </ul>
            </nav>
          <% } %>
        </div>
      </div>
