<script>
  document.addEventListener("DOMContentLoaded", function () {
 
    const chartData = {
      orderData: [10, 5, 15]
    };

    const ordersDataSet = {
      labels: ["Cancelled Orders", "Returned Orders", "Delivered Orders"],
      datasets: [
        {
          label: "Order count",
          data: chartData.orderData,
          backgroundColor: [
            "rgba(255, 0, 0, 0.2)",  
            "rgba(255, 204, 0, 0.2)",  
            "rgba(54, 162, 235, 0.2)", 
          ],
          borderColor: [
            "rgba(255, 0, 0)",   
            "rgba(255, 204, 0)", 
            "rgba(54, 162, 235)", 
          ],
          borderWidth: 1,
        },
      ],
    };

    const pieConfig = {
      type: "pie",
      data: ordersDataSet,
    };

    var pieChart = new Chart(document.getElementById("pieChart"), pieConfig);
  });
</script>

