<!-- Pie Chart HTML -->
<div class="row">
  <div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Pie chart</h4>
        <canvas id="pieChart" style="height:250px"></canvas>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Best Selling Products</h4>
      <p class="card-description">  <code></code></p>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th> Image </th>
              <th> Product Name </th>
              <th> Price </th>
              <th> Brands </th>
              <th> Category </th>
            </tr>
          </thead>
          <tbody>
            <% if (bestsellProduct.length > 0) { %>
              <% bestsellProduct.forEach((product, index) => { %>
                <tr>
                  <td class="py-1">
                    <img src="/products/<%= product.image1 %>" alt="image" />
                  </td>
                  <td><%= product.productname %></td>
                  <td>$<%= product.productprice %></td>
                  <td><%= product.brand %></td>
                  <td><%= product.category %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5">No Products</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Best Selling Brands</h4>
      <p class="card-description"> <code></code></p>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th> # </th>
              <th> Brand Name </th>
              <th> Order Count </th>
            </tr>
          </thead>
          <tbody>
            <% if (bestSellbrands.length > 0) { %>
              <% bestSellbrands.forEach((brand, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= brand.brandName %></td>
                  <td><%= brand.orderCount %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3">No Brands</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

